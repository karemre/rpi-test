#!/bin/sh

apt-get update

apt-get --assume-yes install build-essential expect


/usr/bin/expect <<EOD
spawn ssh pirate@9.1.75.112 "docker ps"
expect "pirate@9.1.75.112's password:"
send "hypriot \n"
expect eof
EOD

